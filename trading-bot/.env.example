# Trading Mode (paper/live)
TRADING_MODE=paper

# Exchange API Credentials (replace with your actual keys)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here
EXCHANGE_PASSPHRASE=your_passphrase_here  # If required by the exchange

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Trading Parameters
INITIAL_BALANCE=10000.0  # Initial account balance in quote currency
RISK_PER_TRADE=0.01      # 1% risk per trade
MAX_DRAWDOWN=0.1         # 10% max drawdown
MAX_POSITION_SIZE=0.1    # 10% of portfolio per position
MAX_LEVERAGE=10.0        # Maximum leverage
DAILY_LOSS_LIMIT=0.05    # 5% daily loss limit

# Logging
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true         # Enable/disable file logging
LOG_FILE=logs/trading_bot.log

# Data Storage
DATA_DIR=./data          # Directory for storing market data
BACKTEST_RESULTS_DIR=./backtest_results

# Notifications (Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Monitoring (Prometheus)
PROMETHEUS_PORT=9090     # Port for Prometheus metrics endpoint

# Exchange-specific Settings
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# FTX
FTX_API_KEY=your_ftx_api_key
FTX_API_SECRET=your_ftx_api_secret

# Kraken
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_PRIVATE_KEY=your_kraken_private_key

# Alpaca
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret

# TradingView Webhook
WEBHOOK_SECRET=your_webhook_secret

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# Environment (development/staging/production)
ENVIRONMENT=development
